{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			"coverage",
			"build",
			"docs",
			"*.js",
			"src/graphql-types.d.ts"
		],
		"include": [
			"src/**/*.ts",
			"src/**/*.graphql",
			"src/**/*.json",
			"src/**/*.yml"
		]
	}
}
